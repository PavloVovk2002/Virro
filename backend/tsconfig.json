{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "baseUrl": "./server",
    "typeRoots": ["./server/types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["server/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
